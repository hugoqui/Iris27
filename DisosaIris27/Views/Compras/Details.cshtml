@model DisosaIris27.Models.Compra

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Compra</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fecha)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Comentario)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comentario)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Proveedor.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Proveedor.Nombre)
        </dd>

    </dl>
</div>

<table class="table table-bordered">
    <tr>
        <td>Codigo</td>
        <td>Producto</td>
        <td>Costo</td>
        <td>Cantidad</td>
        <td>Total</td>
    </tr>
    @foreach (var item in Model.CompraDetalles)
    {
        <tr>
            <td>@item.CodigoProducto</td>
            <td>@item.Producto.Nombre</td>
            <td>@string.Format("{0:2}", item.Costo)</td>
            <td>@item.Cantidad</td>
            <td>@string.Format("{0:2}", (item.Costo * item.Cantidad))</td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Regresar", "Index")
</p>
