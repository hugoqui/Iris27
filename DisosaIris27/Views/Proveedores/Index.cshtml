@model IEnumerable<DisosaIris27.Models.Proveedor>

@{
    ViewBag.Title = "Proveedores";
}

<h2>Proveedores</h2>

<p>
    @Html.ActionLink("+ Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>Proveedor</th>
        <th>Contacto</th>
        <th>Teléfono</th>
        <th>Saldo</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contacto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Saldo)
            </td>
            <td>
                @Html.ActionLink("Modificar", "Edit", new { id = item.Codigo }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Codigo }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Codigo })
            </td>
        </tr>
    }

</table>


<script src="~/Content/js/jquery.min.js"></script>
<script>
    $("li").removeClass("navigation__active");
    $("#menu-proveedores").addClass("navigation__active");
</script>