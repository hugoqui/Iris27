@model IEnumerable<DisosaIris27.Models.Ruta>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de Rutas</h2>

<p>
    @Html.ActionLink("+ Agreagar Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Código
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.ActionLink("Modificar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>


<script src="~/Content/js/jquery.min.js"></script>
<script>
    $("li").removeClass("navigation__active");
    $("#menu-clientes").addClass("navigation__active").children("ul").slideDown();
    $("#menu-rutas").addClass("navigation__active");
</script>